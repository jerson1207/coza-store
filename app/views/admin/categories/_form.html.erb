<div class="max-w-md mx-auto bg-white shadow-md rounded-md p-6">
  <h2 class="text-xl font-semibold mb-4"><%= @admin_category.new_record? ? "Create Category" : "Edit Category" %></h2>
  <%= form_with(model: [:admin, @admin_category]) do |form| %>
    <% if @admin_category.errors.any? %>
      <div class="text-red-500">
        <h2><%= pluralize(@admin_category.errors.count, "error") %> prohibited this admin_category from being saved:</h2>
        <ul>
          <% @admin_category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="mb-4">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 p-2 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, class: "mt-1 p-2 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :image, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :image, class: "mt-1 p-2 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
    </div>
  <% end %>
</div>
