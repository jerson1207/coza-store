<div class="max-w-md mx-auto bg-white shadow-md rounded-md p-6">
  <%= form_with(model: [:admin, @product, admin_stock], class: "mt-4") do |form| %>
    <% if admin_stock.errors.any? %>
      <div class="text-red-500">
        <h2><%= pluralize(admin_stock.errors.count, "error") %> prohibited this admin_stock from being saved:</h2>
        <ul>
          <% admin_stock.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :size, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :size, class: "mt-1 p-2 block w-full border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :amount, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :amount, class: "mt-1 p-2 block w-full border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
    </div>
  <% end %>
</div>
