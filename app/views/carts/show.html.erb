<div class="bg-gray-100 min-h-screen py-8 ">
    <div class="container mx-auto px-4">
        <h1 class="text-2xl font-semibold mb-4">Shopping Cart</h1>
        <div class="flex flex-col md:flex-row gap-4" data-controller="cart">
            <div class="md:w-3/4">
                <div class="bg-white rounded-lg shadow-md p-6 mb-4">
                  <table class="w-full">
                      <thead>
                          <tr>
                              <th class="text-left font-semibold">Product</th>
                              <th class="text-left font-semibold">Size</th>
                              <th class="text-left font-semibold">Price</th>
                              <th class="text-left font-semibold">Quantity</th>
                              <th class="text-left font-semibold">Total</th>
                              <th class="text-left font-semibold">Remove</th>
                          </tr>
                      </thead>
                      <tbody>
                          <!-- Cart items will be dynamically added here -->
                      </tbody>
                  </table> 
                </div>
            </div>
            <div class="md:w-1/4">
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-lg font-semibold mb-4">Summary</h2>
                    <div class="flex justify-between mb-2">
                        <span>Subtotal</span>
                        <span id="subtotal">$19.99</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span>Taxes</span>
                        <span id="taxes">$1.99</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span>Shipping</span>
                        <span id="shipping">$0.00</span>
                    </div>
                    <hr class="my-2">
                    <div class="flex justify-between mb-2">
                        <span class="font-semibold">Total</span>
                        <span class="font-semibold" id="total">$21.98</span>
                    </div>
                    <form>
                        <div class="mb-4">
                            <label for="email" class="block text-sm font-medium text-gray-700">Email Address:</label>
                            <input data-cart-target="email" type="text" class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring focus:border-blue-300">
                        </div>

                        <div class="mb-4">
                            <label for="shipping-address" class="block text-sm font-medium text-gray-700">Shipping Address:</label>
                            <textarea data-cart-target="address" class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring focus:border-blue-300"></textarea>
                        </div>

                        <!-- Checkout button -->
                        <button type="button" data-action="click->cart#checkout" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Checkout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
